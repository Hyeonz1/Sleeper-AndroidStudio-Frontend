<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeBFragment">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="46dp">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "@style/MainLogo" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="175dp">

            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/star1_sleep"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_stop_sleep"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_finish"/>

            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_stop_sleep"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@drawable/home_frg_btn_start_sleep"
                android:text="@string/home_b_frg_stop_sleep"
                android:elevation="15dp"
                android:fontFamily="@font/font_the160"
                android:textSize="12sp"
                android:textColor="@color/logo" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/message_home_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="100dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font_the140" />

    </LinearLayout>

</FrameLayout>